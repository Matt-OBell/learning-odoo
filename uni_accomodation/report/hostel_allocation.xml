<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_hostel">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                   <br></br>
                   <br></br>
                   <div class="oe_structure"/>
                    <h2>Congratulations!</h2>
                    <br></br>
                       <table>
                            <tr>
                                 <td>
                                         <p style="text.align:right;"><strong>Matric No:</strong></p>
                                 </td>
                                 <td>
                                         <p style="text.align:left:padding.left:10px;"><span t-field="o.matric_no"/></p>
                                 </td>
                            </tr>     

                            <tr>
                                 <td>
                                          <p style="text.align:right;"><strong>Name:</strong></p>
                                 </td>
                                 <td>
                                         <p style="text.align:left:padding.left:10px;"><span t-field="o.name"/></p>
                                 </td>
                            </tr>

                            <tr>
                                 <td>
                                         <p style="text.align:right;"><strong>Hostel Name:</strong></p>
                                 </td>
                                  <td>
                                         <p style="text.align:left:padding.left:10px;"><span t-field="o.hostel_name"/></p>
                                 </td>
                            </tr>     

                            <tr>
                                 <td>
                                         <p style="text.align:right;"><strong>Room No:</strong></p>
                                 </td>
                                 <td>
                                         <p style="text.align:left:padding.left:10px;"><span t-field="o.room_id"/></p>
                                 </td>
                            </tr>

                            <tr>
                                 <td>
                                         <p style="text.align:right;"><strong>Block No:</strong></p>
                                 </td>
                                 <td>
                                         <p style="text.align:left:padding.left:10px;"><span t-field="o.block_id"/></p>
                                 </td>
                            </tr>

                            <tr>
                                 <td>
                                         <p style="text.align:right;"><strong>Floor:</strong></p>
                                 </td>
                                 <td>
                                         <p style="text.align:left:padding.left:10px;"><span t-field="o.room_id.room_floor"/></p>
                                 </td>
                            </tr>

                            <tr>
                                 <td>
                                         <p style="text.align:right;"><strong>Bunk:</strong></p>
                                 </td>
                                  <td>
                                         <p style="text.align:left:padding.left:10px;"><span t-field="o.bunk"/></p>
                                 </td>
                            </tr>
                       </table>
                         <p>Proceed to the nearest bank to pay for your accomodation <span t-field="o.name"/></p>
                </div>
            </t>
        </t>
    </t>
</template>
</odoo>