<?xml version="1.0"?>
<odoo>

  <!-- explicit form view definition -->

  <record model="ir.ui.view" id="uni_library_form">
    <field name="name">uni_library form</field>
    <field name="model">uni_library.uni_library</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button string="Check ISBN" name="button_check_isbn" type="object"/>
        </header>
        <sheet>
          <group name="group">
            <group name="group">
              <field name="name" />
              <field name="author_ids" widget="many2many_tags" />
              <field name="publisher_id" />
              <field name="date_published" />
            </group>
            <group name="group">
              <field name="isbn" />
              <field name="active" />

            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>


  <!-- explicit tree view definition -->

  <record model="ir.ui.view" id="uni_library_tree">
    <field name="name">uni_library tree</field>
    <field name="model">uni_library.uni_library</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="author_ids" widget="many2many_tags"/>
        <field name="publisher_id"/>
        <field name="date_published"/>
      </tree>
    </field>
  </record>

  <act_window id="action_books" name="Library management" res_model="uni_library.uni_library" view_mode="tree,form"/>
  <act_window id="action_members" name="Member management" res_model="uni_library.uni_library" view_mode="tree,form"/>

  <menuitem id="uni_library_menu_root" name="Library"/>
  <menuitem id="uni_library_books" name="Books" parent="uni_library_menu_root"/>
  <menuitem id="uni_library_books_action" name="Get Books" parent="uni_library_books" action="action_books"/>
  
  <menuitem id="uni_library_members" name="Members" parent="uni_library_menu_root" action="action_members" />
</odoo>